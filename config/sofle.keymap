#include <dt-bindings/zmk/keys.h>

/ {
    /* No custom tap behaviors needed for simple encoder actions.
     * We'll set encoder rotation via sensor-bindings below.
     */
};

/* Sofle encoder nodes are labeled by the shield as &left_encoder / &right_encoder */
&left_encoder  { sensor-bindings = <&inc_dec_kp PG_UP PG_DN>;  };
&right_encoder { sensor-bindings = <&inc_dec_kp PG_UP PG_DN>;  };

